#include<iostream>
#include<iomanip>
using namespace std;

int add(int a, int b);
int sub(int a, int b);
int mul(int a, int b);
int divide(int a, int b);


int add(int a, int b)
{
    return a+b;
}

int sub(int a, int b)
{
    return a-b;
}

int mul(int a, int b)
{
    return a*b;
}

int divide(int a, int b)
{
    return a/b;
}



int main(){

    do{
    int a , b;
    int result;
    int op;

    cout<<"Enter the values of a and b : ";
    cin>>a>>b;

    cout<<"Enter 1 to add \n";
    cout<<"Enter 2 to sub \n";
    cout<<"Enter 3 to mul \n";
    cout<<"Enter 4 to div \n";


    cin>>op;

    switch (op)
    {
    case 1:
        result = add(a,b);
    break;

    case 2:
        result = sub(a,b);
    break;

    case 3:
        result = mul(a ,b);
    break;

    case 4:
        result = divide(a ,b);
        break;

    
    default:
        cout<<"Invalid input";
        break;
    }

    cout<<"Result is : "<<result <<endl;
    char input = 'n';
    cout<<"do you want to continue ?(yes/no)";
    cin>>input;
    if(input == 'n')
        break;


}while(1);
    cout<<"Thankyou for using our service \n" ;
    

    return 0;
}
